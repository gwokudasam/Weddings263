<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_store"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/imgBridalWear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/wpp1coverdribbble"

                />


            <TextView
                android:id="@+id/tvVenueName"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBridalWear"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="10dip"
                android:maxLines="1"
                android:text="Luxury Bridal Services"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tvVenueName"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="05 Scarsdale Road, Avondale, Harare" />


            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAddress"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="someone@somemail.co.zw" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmail"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="0773452222" />

            <TextView
                android:id="@+id/tvReviewsNumber"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPhone"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"

                android:text="5.6/10   16 Reviews"
                android:textColor="@android:color/black"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/btnNavigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPhone"
                android:layout_marginTop="40dp"
                android:gravity="left"
                android:src="@drawable/ic_directions_black_24dp" />


            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/btnNavigate"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:src="@drawable/ic_call_black_24dp" />


            <View
                android:id="@+id/divider2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/btnNavigate"
                android:layout_marginTop="15dp"
                android:background="@android:color/darker_gray" />


            <TextView

                android:id="@+id/tvLongDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider2"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="15dip"
                android:text="@string/lorem_ipsum" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>